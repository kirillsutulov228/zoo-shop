{
  "name": "zoo-shop",
  "version": "0.0.1",
  "scripts": {
    "start": "npm run build && node src/index.js",
    "build": "npx tailwind -i ./src/index.css -o ./public/style.css",
    "build:watch": "npx tailwind -i ./src/index.css -o ./public/style.css -w",
    "start:watch": "concurrently -n tailwind,nodemon \"npm run build:watch\" \"nodemon -e js --watch src src/index.js\""
  },
  "dependencies": {
    "dotenv": "^16.0.1",
    "ejs": "^3.1.8",
    "express": "^4.18.1",
    "express-ejs-layouts": "^2.5.1",
    "express-session": "^1.17.3"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.2.2",
    "nodemon": "^2.0.16",
    "postcss": "^8.4.14",
    "postcss-cli": "^9.1.0",
    "tailwindcss": "^3.1.3"
  }
}
